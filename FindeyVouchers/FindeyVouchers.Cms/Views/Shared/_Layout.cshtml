<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Findey Vouchers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/sidebar.css"/>
</head>
<body>
<div id="wrapper" class="toggled">
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        Findey vouchers
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="MerchantVoucher" asp-action="Index">Mijn vouchers</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="CustomerVoucher" asp-action="Index">Verkochte vouchers</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="VoucherCategory" asp-action="Index">categorieën</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="Index">Account</a>
                </li>
                <li class="mt-5">
                    <a>
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Page("/", new {area = ""})"
                              method="post">

                            <button type="submit" class="nav-link btn text-white">Log uit</button>

                        </form>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
    }
    <!-- Page Content -->
    <div id="page-content-wrapper">

        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
@if (User.Identity.IsAuthenticated)
{
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Findey Vouchers -
            <a href='@Url.Content("~/files/ALGEMENE VOORWAARDEN - Merchant.pdf")'>Algemene voorwaarden </a> -
            <a href='@Url.Content("~/files/PRIVACYVERKLARING - merchant.pdf")'>Privacy verklaring </a>
        </div>
        <div class="fixed-bottom">
            <partial name="_CookieConsentPartial"/>
        </div>
    </footer>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", false)
</body>
</html>