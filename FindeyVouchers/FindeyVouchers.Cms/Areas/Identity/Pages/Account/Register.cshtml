@page
@model RegisterModel
<link rel="stylesheet" href="~/css/account.css"/>
<div class="container-fluid">
    <div class="row">
        <div
            class="d-none d-sm-none d-md-none d-lg-block d-xl-block col-lg-6 col-xl-6 background">
        </div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 content">
            <div class="form-box">
                <div class="headline">
                    <h2>
                        Registreer
                    </h2>
                    <p>Maak een nieuw account.</p>
                </div>
                <div class="input-fields">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <input asp-for="Input.Email" placeholder="email"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <input asp-for="Input.Password" placeholder="Wachtwoord"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <input asp-for="Input.ConfirmPassword" placeholder="Bevestig wachtwoord"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        <div class="extra-form-elements">
                            <div class="left-element">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input
                                        type="checkbox"
                                        class="custom-control-input"
                                        id="checkboxRequired"/>
                                    <label class="custom-control-label" for="checkboxRequired">
                                        I agree with the terms and conditions
                                    </label
                                    >
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="extra-form-elements">
                            <div class="center-element">
                                <button type="submit" id="submit">Registreer</button>
                            </div>
                        </div>
                        <div class="extra-form-elements">
                            <div class="center-element">
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Heeft u al een account? Log in.</a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="copyright">
                    <span>&copy; 2020 - Findey Vouchers</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}