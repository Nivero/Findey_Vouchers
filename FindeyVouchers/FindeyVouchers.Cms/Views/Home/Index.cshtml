@{
    ViewData["Title"] = "Welkom";
}
@model HomeViewModel

@if (Model.OnboardingComplete)
{
    <div class="text-center">
        <h1 class="display-4">Welkom</h1>
        <p>Selecteer een item van het menu om te beginnen!</p>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Welkom</h1>
        <p>Het is je eerste op dit platform</p>
        <p>Wij hebben daarom wat gegevens van jou nodig voordat jij producten kan gaan aanbieden!</p>
        <p>Klik op de button hieronder om jouw gegevens in te voeren.</p>
        <div class="sr-main">
            <a href="https://connect.stripe.com/express/oauth/authorize?client_id=@Model.ClientId&state=@Model.StateValue&suggested_capabilities[]=transfers&stripe_user[email]=@Model.Email">Start onboarding</a>
        </div>
    </div>
}