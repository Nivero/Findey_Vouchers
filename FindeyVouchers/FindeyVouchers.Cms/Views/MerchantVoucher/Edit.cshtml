@using FindeyVouchers.Domain.EfModels
@model FindeyVouchers.Domain.EfModels.MerchantVoucher

<h4>Vouchers</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" hidden/>
                <input asp-for="ImageFile" class="form-control-file" type="file">
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultImages" class="control-label"></label>
                <select asp-for="DefaultImages" class="form-control" asp-items="Html.GetEnumSelectList<DefaultImages>()" onchange="showImage(this)"></select>
                <span asp-validation-for="DefaultImages" class="text-danger"></span>
            </div>
            <div class="form-group" id="imageDiv" hidden>
                <img class="shadow" id="displayImage" src="https://findeystorage.blob.core.windows.net/voucher-images/default-images/Black.png" width="300" height="150">
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoucherType" class="control-label"></label>
                <select asp-for="VoucherType" class="form-control" asp-items="Html.GetEnumSelectList<VoucherType>()" disabled></select>
                <span asp-validation-for="VoucherType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Verzend" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>
<script>            

function showImage(dropdown){
let imageList = [
    "Black.png",
    "Blue.png",
    "Bronze.png",
    "Gold.png",
    "Green.png",
    "Pink.png",
    "Silver.png",
    "White.png",
    "Yellow.png"
];
    if(dropdown.value > 0 ){
        document.getElementById("imageDiv").removeAttribute("hidden");
        document.getElementById("displayImage").src = "https://findeystorage.blob.core.windows.net/voucher-images/default-images/"+imageList[dropdown.value-1];
    }else{
        document.getElementById("imageDiv").setAttribute("hidden", true);
    }

}
</script>