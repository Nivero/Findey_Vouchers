@page
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/account.css"/>
    <title>Login</title>
</head>
<body>
<main>
<div class="container-fluid">
    <div class="row">
        <div
            class="d-none d-sm-none d-md-none d-lg-block d-xl-block col-lg-6 col-xl-6 background">
        </div>
        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 content">
            <div class="form-box">
                <div class="headline">
                    <h2>
                        Welkom<br/>
                        bij Findey Vouchers!
                    </h2>
                    <p>Log in om te beginnen!</p>
                </div>
                <div class="input-fields">
                    <form id="account" method="post">
                        <input asp-for="Input.Email" placeholder="Email"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <input asp-for="Input.Password" placeholder="Wachtwoord"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="extra-form-elements">
                            <div class="left-element">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input asp-for="Input.RememberMe" class="custom-control-input" id="rememberMe"/>
                                    <label class="custom-control-label" for="rememberMe">
                                        Onthoud mij
                                    </label
                                    >
                                </div>
                            </div>
                            <div class="right-element">
                                <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="extra-form-elements">
                            <div class="left-element">
                                <button type="submit">Log in</button>
                            </div>
                            <div class="right-element">
                                 <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                 <button type="button">
                                     Registreer
                                 </button>
                                 </a>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </form>
                </div>
                <div class="copyright">
                    <span>&copy; 2020 - Findey Vouchers</span>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
<!--Bootstrap Includes-->
<script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>