@model IEnumerable<FindeyVouchers.Domain.EfModels.MerchantVoucher>
<p>
    <a asp-action="Create" class="btn btn-primary">Maak nieuwe voucher aan</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                https://findeystorage.blob.core.windows.net/voucher-images/@Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                â‚¬@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @if (item.IsActive)
                {
                    <span class="voucher-status-dot-on"></span>
                }
                else
                {
                    <span class="voucher-status-dot-off"></span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Wijzig</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                @if (item.IsActive)
                {
                    <a asp-action="ChangeActive" asp-route-id="@item.Id">Deactiveer</a>
                }
                else
                {
                    <a asp-action="ChangeActive" asp-route-id="@item.Id">Activeer</a>
                }

            </td>
        </tr>
    }
    </tbody>
</table>